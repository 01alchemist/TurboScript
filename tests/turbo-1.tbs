declare function log(v: string): void;
//declare function unsafe():void;

export class Vector3{
    x: float32;
    y: float32;

    constructor(x: float32, y:float32): void {
        this.y = y;
        this.x = x;
    }

    add(b:Vector3):Vector3{
        let c = new Vector3();
        c.x = this.x + b.x;
        c.y = this.y + b.y;
        return c;
    }
}

@unsafe
export class Vector {

    x: float32;
    y: float32;

    constructor(x: float32, y:float32): void {
        this.y = y;
        this.x = x;
    }

    add(b:Vector):Vector3 {
        let c = new Vector3();
        c.x = this.x + b.x;
        c.y = this.y + b.y;
        return c;
    }

    add_vec3(b:Vector3):Vector3 {
        let c = new Vector3();
        c.x = this.x + b.x;
        c.y = this.y + b.y;
        return c;
    }

    toString():string {
        let x = this.x;
        let y = this.y;
        return `{"x":${x},"y":${y}}`;
    }
}

