@unsafe
export class Shape {
    v1:Vector;

    constructor(v1:Vector):void {
        this.v1 = v1 == null? new Vector() : v1;
    }
}

@unsafe
export class Triangle {
    v1:Vector;

    constructor(v1:Vector):void {
        this.v1 = v1 == null? new Vector() : v1;
    }

    normal():Vector3{
        let b = new Vector();
        let c = this.v1.add(b);
        return c;
    }

    toString():string {
        let str = this.v1.toString();
        return `{"v1":${str}}`;
    }
}

@unsafe
export class Mesh {
    unsafe triangles:*Triangle;

    unsafe constructor(data:*Triangle):void {
        this.triangles = data;
    }

    unsafe normal():void{
        log(this.triangles as string);
    }
}