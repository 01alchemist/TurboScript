class Vector3 {
    x: float64;
    y: float64;
    z: float64;

    constructor(x: float64, y: float64, z: float64): Vector3 {
        this.x = x;
        this.y = y;
        this.z = z;
        return this;
    }

    length(): float64 {
        return Math.sqrt(
            (this.x * this.x) + (this.y * this.y) + (this.z * this.z)
        );
    }

