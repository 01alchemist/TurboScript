class Camera {
	p:Vector3;
	u:Vector3;
	v:Vector3;
	w:Vector3;
	m:float32;
	focalDistance :float32;
	apertureRadius:float32;

    constructor(p:Vector3=null, u:Vector3=null, v:Vector3=null, w:Vector3=null, m:float32=0.0, focalDistance:float32=0.0,
                apertureRadius:float32=0.0):Camera {
        this.p = p == null ? new Vector3() : p;
        this.u = u == null ? new Vector3() : u;
        this.v = v == null ? new Vector3() : v;
        this.w = w == null ? new Vector3() : w;
        this.m = m;
        this.focalDistance = focalDistance;
        this.apertureRadius = apertureRadius;
        return this;
    }

